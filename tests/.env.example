# Copy to .env and configure for your local database
# DB_GRAMMAR controls which qb grammar the tests use (MySQLGrammar or SqlServerGrammar)

# MySQL (matches CI configuration)
DB_GRAMMAR=MySQLGrammar
DB_CLASS=com.mysql.cj.jdbc.Driver
DB_BUNDLENAME=com.mysql.cj
DB_BUNDLEVERSION=8.0.33
DB_CONNECTIONSTRING=jdbc:mysql://127.0.0.1:3306/qbml_test?useUnicode=true&characterEncoding=UTF-8&useLegacyDatetimeCode=true
DB_USER=qbml
DB_PASSWORD=qbml_password

